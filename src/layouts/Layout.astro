---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import CookieNotice from '../components/CookieNotice.astro';

interface Props {
	title: string;
}
const { title } = Astro.props;
const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<!-- Metaetiquetas básicas -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- Metaetiquetas de SEO -->
		<meta name="description" content="Interpreters Booth, servicios profesionales de traducción e interpretación de idiomas, especializado en inglés y español para empresas y eventos." />
		<meta name="keywords" content="traducción, interpretación, idiomas, inglés, español, servicios de traducción, intérpretes, traducción simultánea, traducción profesional" />
		
		<!-- Metaetiquetas de Open Graph para compartir en redes sociales -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Servicios de traducción e interpretación de idiomas para eventos, empresas y más." />
		<meta property="og:image" content="/images/social-preview.jpg" />
		<meta property="og:url" content={Astro.site} />
		<meta property="og:type" content="website" />
		
		<!-- Twitter Cards para mejor integración en Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="Servicios de traducción e interpretación de idiomas para eventos y empresas." />
		<meta name="twitter:image" content="/images/social-preview.jpg" />
		
		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon.png" sizes="32x32" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
	  
		<!-- Tipografía -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap" />
	  
		<!-- Metaetiquetas adicionales -->
		<meta name="robots" content="index, follow" />
		<meta name="author" content="Interpreters Booth" />
		<meta name="generator" content={Astro.generator} />
	  
		<!-- Título dinámico -->
		<title>{title}</title>
	  
		<!-- Importaciones adicionales -->
		<ViewTransitions />
	  </head>
	  
	<body>
		<Header />
		<slot />
	
	<CookieNotice />
	
	<Footer />
	</body>
	
</html>

